<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//span[@t-field='o.payment_term_id']" position="after">
            <br />
            <strong>Purchase Representative : </strong>
            <span t-field="o.user_id" class="mt-4"> </span>
            <br />
            <strong>Purchase Team : </strong>
            <span class="mt-4">None</span>
        </xpath>

        <xpath
            expr="//table[hasclass('o_has_total_table' , 'table' , 'o_main_table' ,'table-borderless')]//thead//th[@name='th_description']"
            position="before">
            <th name="po_sequence" class="text-start">
                <strong>No.</strong>
            </th>
        </xpath>


        <xpath
            expr="//table[hasclass('o_has_total_table' , 'table' , 'o_main_table' ,'table-borderless')]//tbody//td[@id='product']"
            position="before">
            <td id="po_sequence_value" class="text-start">
                <span t-esc="line_index + 1 " />
            </td>
        </xpath>

        <xpath
            expr="//table[hasclass('o_has_total_table' , 'table' , 'o_main_table' ,'table-borderless')]"
            position="after">
            <div class="row">
                <div class="col-6">
                    <strong>Total Quantity of All Items : </strong>
                    <t t-set="total_qty"
                        t-value="sum(line.product_qty for line in o.order_line if not line.display_type)" />
                    <span>
                        <t t-esc="total_qty" />
                    </span>
                </div>
            </div>
        </xpath>
    </template>
</odoo>