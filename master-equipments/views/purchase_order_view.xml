<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.module</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="after">
                <field name="master_equipment_category_id"/>
            </xpath>

            <field name="date_order" position="after">
                <field name="product_list_ids" widget="many2many_tags"/>
            </field>

            <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="attributes">
                <attribute name="domain">[('id','in',parent.product_list_ids)]</attribute>
            </xpath>

        </field>
    </record>


</odoo>