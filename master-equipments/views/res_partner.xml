<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.module</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="vendor_priority" string="" />
                <field name="is_filter_po_products_category" />
                <field name="product_list_ids" invisible="is_filter_po_products_category == False"
                    widget="many2many_tags" />
            </field>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.filter.inherit.module</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter name="vendor_priority" string="Vendor Priority" domain="[]"
                    context="{'group_by':'vendor_priority'}" />
            </xpath>
        </field>
    </record>
</odoo>